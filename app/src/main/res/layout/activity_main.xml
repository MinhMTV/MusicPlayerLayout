<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.minhtv.musicalstructure.MainActivity">

    <LinearLayout
        android:id="@+id/LL_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/search"
        style="@style/CategoryStyle"
        android:background="@color/category_color"
        android:text="@string/category_search" />

        <ImageView
            android:id="@+id/search_image"
            android:background="@color/category_color"
            android:src="@drawable/img_search"
            style="@style/CategoryImage" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_play"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/play"
        style="@style/CategoryStyle"
        android:background="@color/category_color"
        android:text="@string/category_play" />

        <ImageView
            android:id="@+id/play_image"
            android:background="@color/category_color"
            android:src="@drawable/img_play"
            style="@style/CategoryImage" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_library"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/library"
        style="@style/CategoryStyle"
        android:background="@color/category_color"
        android:text="@string/category_library" />

        <ImageView
            android:id="@+id/library_image"
            android:background="@color/category_color"
            android:src="@drawable/img_library"
            style="@style/CategoryImage" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_favorites"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/favorites"
        style="@style/CategoryStyle"
        android:background="@color/category_color"
        android:text="@string/category_favorites" />

        <ImageView
            android:id="@+id/favorite_image"
            android:background="@color/category_color"
            android:src="@drawable/img_favorites"
            style="@style/CategoryImage" />

    </LinearLayout>

</LinearLayout>